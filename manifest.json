{
  "manifest_version": 2,

  "name": "PocketCasts Autoplay",
  "description": "This extension enable autoplay feature on PocketCasts",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs", "https://play.pocketcasts.com/*"
  ],

  "content_scripts": [{
    "matches": ["https://play.pocketcasts.com/*"],
    "js": ["autoplay.js"]
  }]
}
